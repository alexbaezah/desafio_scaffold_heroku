

<h1>Students</h1>



<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
         <th scope="col">email</th>
       <th colspan="3"></th>
          </tr>
  </thead>  

<tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.email %></td>
        <td> <button type="button" class="btn btn-primary"><%= link_to 'Show', student %></button>        
        </td>
    </tr>
    <% end %>
  </tbody>
</table>